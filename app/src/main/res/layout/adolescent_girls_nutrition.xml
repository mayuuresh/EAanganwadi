<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Children0M6MNutrition">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/pink">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Adolescent Girls"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Date and Time"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:background="@drawable/bordered_edittext"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bordered_edittext"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1.Nutritional Supplements"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Are you already in your menstrual cycle?"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/cycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px"
                    android:layout_marginLeft="30px"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100px"
                    android:layout_marginLeft="100px"
                    android:text="No" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Iron Level(%)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/height2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="Enter Iron Level"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hemoglobin(g/dL)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="  Enter Hemoglobin"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Which type of  health service are you availing?"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <CheckBox
                android:id="@+id/allopath2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allopath" />

            <CheckBox
                android:id="@+id/homopathy2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hamopathy" />

            <CheckBox
                android:id="@+id/ayush2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ayush" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bordered_edittext"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="2.Nutritional Intervention"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Height Unit"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />


            <RadioGroup
                android:id="@+id/radioheight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonInch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Inch" />

                <RadioButton
                    android:id="@+id/radioCM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CM" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Height"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/energy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="  Enter The Height"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Weight (Kgs)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/energy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="  Enter The Weight"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

        </LinearLayout>

        <Button
            android:id="@+id/submitI"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="SUBMIT"
            android:textSize="20dp" />
    </LinearLayout>
</ScrollView>