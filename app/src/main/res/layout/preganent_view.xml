<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Pregnant_view">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/pink">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/left_arrow"
                android:contentDescription="Description for accessibility"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Pregnant Woman"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Date and Time"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:background="@drawable/bordered_edittext"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/personal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bordered_edittext"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Persoanl Information"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Name:"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Date of Birth"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/Mobile_No"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Delivery Date"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/delivary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />
        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
             android:background="@drawable/bordered_edittext"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8dp">
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:text="1.Nutrition Level"
                 android:textColor="@color/cardview_dark_background"
                 android:textStyle="bold"
                 android:textSize="20dp"/>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:text="Height Unit"
                 android:textColor="@color/cardview_dark_background"
                 android:textStyle="bold"
                 android:textSize="17dp"/>

             <RadioGroup
                 android:id="@+id/radioheight"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <RadioButton
                     android:id="@+id/radioButtonInch"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginEnd="30dp"
                     android:text="Inch" />

                 <RadioButton
                     android:id="@+id/radioCM"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="CM" />
             </RadioGroup>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:text="Height"
                 android:textColor="@color/cardview_dark_background"
                 android:textStyle="bold"
                 android:textSize="17dp"/>

             <EditText
                 android:id="@+id/height"
                 android:layout_width="match_parent"
                 android:layout_height="48dp"
                 android:layout_margin="8dp"
                 android:background="@drawable/bordered_edittext"
                 android:hint="  Enter the Height"
                 android:textColor="@color/cardview_dark_background"
                 android:textSize="18dp" />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:text="Weight (kgs)"
                 android:textColor="@color/cardview_dark_background"
                 android:textStyle="bold"
                 android:textSize="17dp"/>

             <EditText
                 android:id="@+id/weight"
                 android:layout_width="match_parent"
                 android:layout_height="48dp"
                 android:layout_margin="8dp"
                 android:background="@drawable/bordered_edittext"
                 android:hint="  Enter the Weight"
                 android:textColor="@color/cardview_dark_background"
                 android:textSize="18dp" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:text="Hemoglobin (g/dL)"
                 android:textColor="@color/cardview_dark_background"
                 android:textSize="17dp"
                 android:textStyle="bold"
                 tools:ignore="TextSizeCheck" />

             <EditText
                 android:id="@+id/hemoglobin"
                 android:layout_width="match_parent"
                 android:layout_height="48dp"
                 android:layout_margin="8dp"
                 android:background="@drawable/bordered_edittext"
                 android:hint="  Enter the hemoglobin"
                 android:textColor="@color/cardview_dark_background"
                 android:textSize="18dp" />
         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bordered_edittext"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="2.Nutritional Supplements"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="I}Are you given any nutritional supplements"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />


            <CheckBox
                android:id="@+id/FalicAcid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Falic Acid"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <CheckBox
                android:id="@+id/Iron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iron"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <CheckBox
                android:id="@+id/Vitamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <CheckBox
                android:id="@+id/Calcium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcium"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="II}What is the Energy Intake ? (kcal/day)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/energy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="  Enter the Energy Intake"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="III}What is the Protein Intake ? (g/day)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/protein"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="  Enter the Protein Intake"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />
        </LinearLayout>

        <Button
            android:id="@+id/submitI"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="SUBMIT"
            android:textSize="20dp" />
    </LinearLayout>
</ScrollView>


